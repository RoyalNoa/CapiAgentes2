# Example environment variables for CapiAgentes Backend
# Copy to .env and adjust values for your environment.

# OpenAI Configuration (Optional - system works with FAQ fallback)
OPENAI_API_KEY=replace_me

# Security (Required)
SECRET_KEY=change_me_development_secret_at_least_32_chars
API_KEY_BACKEND=local_internal_api_key

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
ALLOWED_HOSTS=*

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000

# Feature Toggles
RATE_LIMIT_ENABLED=true
METRICS_ENABLED=true

# LangChain Configuration (Optional - system uses sensible defaults)
LANGCHAIN_ENABLE_NARRATIVE=false
LANGCHAIN_CONFIDENCE_THRESHOLD=0.6

# Optional services (uncomment if needed)
# REDIS_URL=redis://redis:6379/0
# DATABASE_URL=postgresql+psycopg://user:pass@db:5432/app